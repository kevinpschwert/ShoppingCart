    <div class="container">



        @foreach (var item in Model)
            {
            <div class="row">
                <div class="col-md-8">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-4">

                        <div class="row">
                            <h3><u>Order ID: @Html.DisplayFor(modelItem => item.Id)</u></h3>
                        </div>
                        <div class="row">
                            <h4>Address: @Html.DisplayFor(modelItem => item.Address)</h4>
                        </div>

                        <div class="row">
                            <h4>City: @Html.DisplayFor(modelItem => item.City)</h4>
                        </div>

                        <div class="row">
                            <h4>State: @Html.DisplayFor(modelItem => item.State)</h4>
                        </div>

                        <div class="row">
                            <h4>Zipcode:  @Html.DisplayFor(modelItem => item.Zipcode)</h4>
                        </div>

                        <div class="row">
                            <h4>Country: @Html.DisplayFor(modelItem => item.Country)</h4>
                        </div>

                        <div class="row">
                            <h4>Phone: @Html.DisplayFor(modelItem => item.Phone)</h4>
                        </div>

                        <div class="row">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { cid = item.CustomerId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </div>
                    </div>

                </div>

                <div class="col-md-4">

                    <br />
                    <br />

                    @{ 
                        decimal subTotal = item.Total - 150;
                        decimal delCharge;
                        decimal Total;

                        if (subTotal < 1)
                        {
                            delCharge = 0;
                        }
                        else
                        {
                            delCharge = 150;
                        }
                        Total = subTotal + delCharge;



                    <h3><b>Price Details</b></h3>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Total</h4>
                        </div>
                        <div class="col-md-6">
                            @*<h4>$ @ViewBag.num</h4>*@
                            <h4>@subTotal</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Delivery Charge</h4>
                        </div>
                        <div class="col-md-6">
                            <h4>$150.00</h4>
                        </div>
                    </div>
                    <div class="row">
                        <hr style="height:1px;background-color:black">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h4><b>Total Price</b></h4>
                        </div>
                        <div class="col-md-6">
                            <h4>@Total</h4>
                        </div>
                    </div>
                    <br />
                    using (Html.BeginForm("Done", "Orders", new { id = item.Id }, FormMethod.Post))
                {

                        <center><input class="btn btn-warning" type="submit" value="Complete Order" /></center>

                    }
                    }
                </div>
            </div>
            <hr style="height:2px;background-color:black">
        
        }
    </div>



